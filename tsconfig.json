{
    "compilerOptions": {
        "target": "es2020",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "strict": false,
        "module": "CommonJS",
        "importHelpers": true,
        "lib": [
            "es2020",
            "dom",
            "ESNext"
        ],
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "declaration": true
    },
    "include": [
        "src/server/**/*.ts",
        "src/generator/**/*.ts",
        "src/shared/**/*.ts",
        "src/test/**/*.ts"
    ],
    "exclude": [
        "src/client/public/bower",
        "src/vuejsclient/**/*.ts",
        "node_modules"
    ]
}