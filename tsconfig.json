{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": true,
        "module": "commonjs",
        "importHelpers": true,
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "outDir": "dist",
        "declaration": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "src/client/public/bower",
        "node_modules"
    ]
}