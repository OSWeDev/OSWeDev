{
    "compilerOptions": {
        "target": "es2020",
        "outDir": "../../dist/",
        "sourceMap": true,
        "strict": false,
        "module": "CommonJS",
        "importHelpers": true,
        "lib": [
            "es2020",
            "es6",
            "dom",
            "ESNext"
        ],
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "skipLibCheck": true,
        "useDefineForClassFields": false
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "../../node_modules"
    ]
}