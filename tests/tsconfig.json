{
    "compilerOptions": {
        "target": "es2020",
        "sourceMap": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "importHelpers": true,
        "allowJs": true,
        "outDir": "../../dist/",
        "lib": [
            "es2020",
            "es6",
            "dom",
            "ESNext"
        ],
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "../../node_modules"
    ]
}