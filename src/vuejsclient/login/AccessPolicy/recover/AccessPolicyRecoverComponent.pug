.login-page
    .login-box
        .login-box-body
            .login-logo(v-if='logo_url')
            h1.text-center(v-if='!logo_url') {{ label('login.recover.title') }}
            h2.text-center {{ label('login.recover.sub_title') }}
            p.server-answer(v-if='message') {{ message }}
            div(v-if='!message')
                p.login-box-msg {{ label('login.recover.desc') }}
                form(v-on:submit.prevent="")
                    .form-group.has-feedback(v-on:submit.prevent="")
                        input.form-control(type='email', v-model='email', :placeholder='label("login.email_placeholder")')
                        i.fa.fa-id-card.pull-right.fa-fw(aria-hidden="true")

                    .center
                        button.btn.btn-primary.btn-block.btn-flat(@click="recover") {{ label('login.recover.submit') }}