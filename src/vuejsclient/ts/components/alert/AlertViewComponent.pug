.alert_view_component
    .alert_view_component_content
        .type_icon_wrapper(v-if="show_alert_icon")
            template(v-if='is_error')
                i.fa-solid.fa-exclamation-triangle.fa-fw.alert_component_error(aria-hidden="true")
            template(v-if='is_warn')
                i.fa-solid.fa-exclamation-triangle.fa-fw.alert_component_warn(aria-hidden="true")
            template(v-if='is_info')
                i.fa-solid.fa-exclamation-circle.fa-fw.alert_component_info(aria-hidden="true")
            template(v-if='is_debug')
                i.fa-solid.fa-exclamation-circle.fa-fw.alert_component_debug(aria-hidden="true")

        .alert_contenu(:class="{show_alert_icon: show_alert_icon}")
            template(v-if="show_alert_date")
                .alert_date {{ date_alert }}

            template(v-if="show_alert_content")
                .alert_content {{ label(alert.translatable_code, alert.translation_params) }}