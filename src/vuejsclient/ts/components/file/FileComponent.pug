.fileinput
    .row
        .col-sm-12
            vue-dropzone(v-if="!readonly" :ref="'filedropzone' + uid" :id="'filedropzone' + uid" :options="dropzoneOptions")
                .dz-message
                    i.fa-solid.fa-upload.fa-3x(aria-hidden="true")
            template(v-if='hide_download_label')
                a.btn.btn-sm.btn-primary(v-if="(!!filevo) && filevo[field.module_table_field_id]" :href="'/' + uri_compatible_file_path" target='_blank')
                    i.fa-download.fa.fa-lg.btn_icon(aria-hidden="true")
            template(v-else)
                a.btn.btn-sm.btn-primary(v-if="(!!filevo) && filevo[field.module_table_field_id]" :href="'/' + uri_compatible_file_path" target='_blank')
                    i.fa-download.fa.fa-lg.btn_icon(aria-hidden="true")
                    | {{ label('file.download') }}
            .btn.btn-sm.btn-danger.ml-2(v-if="(!!filevo) && filevo[field.module_table_field_id] && !hide_btn_delete_file", @click="removeFile")
                i.fa-trash.fa.fa-lg.btn_icon(aria-hidden="true")
                | {{ label('file.trash') }}