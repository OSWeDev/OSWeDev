.supervision_dashboard_item_wrapper
    .supervision_dashboard_item(v-if='!noclick' :class='state_classname' @click='open_item')
        //- a.row(:href="'/admin#/supervision/item/' + this.item._type + '/' + this.item.id" )
        .row
            .col-sm-1.supervision_dashboard_item_type
                i.fa.fa-fw(aria-hidden="true" :class='fa_class_name')
            .col-sm-7.supervision_dashboard_item_name {{ item.name }}
            .col-sm-3.supervision_dashboard_item_date {{ formatted_date }}
            .col-sm-1.supervision_dashboard_item_value {{ formatted_last_value }}
    .supervision_dashboard_item.noclick(v-else :class='state_classname')
        .row
            .col-sm-1.supervision_dashboard_item_type
                i.fa.fa-fw(aria-hidden="true" :class='fa_class_name')
            .col-sm-7.supervision_dashboard_item_name {{ item.name }}
            .col-sm-3.supervision_dashboard_item_date {{ formatted_date }}
            .col-sm-1.supervision_dashboard_item_value {{ formatted_last_value }}