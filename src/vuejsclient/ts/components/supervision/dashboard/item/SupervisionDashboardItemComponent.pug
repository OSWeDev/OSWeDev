.supervision_dashboard_item_wrapper
    .supervision_dashboard_item(:class='state_classname' @click='open_item' v-if='!noclick')
        .row
            .col-md-1.supervision_dashboard_item_type
                i.fa.fa-fw(aria-hidden="true" :class='fa_class_name')
            .col-md-7.supervision_dashboard_item_name {{ item.name }}
            .col-md-3.supervision_dashboard_item_date {{ formatted_date }}
            .col-md-1.supervision_dashboard_item_value {{ formatted_last_value }}
    .supervision_dashboard_item(:class='state_classname' v-else)
        .row
            .col-md-1.supervision_dashboard_item_type
                i.fa.fa-fw(aria-hidden="true" :class='fa_class_name')
            .col-md-7.supervision_dashboard_item_name {{ item.name }}
            .col-md-3.supervision_dashboard_item_date {{ formatted_date }}
            .col-md-1.supervision_dashboard_item_value {{ formatted_last_value }}