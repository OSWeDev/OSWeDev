.var_charts_scales_options_component
    // Titre
    .options_separator_lvl2 {{ label('var_charts_scales_options_component.separator.var_options') }}
    
    .var_charts_scales_options_selector
        // Bouton "Ajouter une échelle"
        .add_var_chart_scales_options_button_wrapper
            button.btn.btn-success.btn-lg.btn-block.add_var_chart_scales_options_button(
                @click="add_var_chart_scales_options"
            )  {{ label('var_chart_scales_options_component.add_var_chart_scales_options_button') }}

        // Liste d'items
        template
            .input_wrapper(
                v-for="(var_chart_scales_options, index) in options_props"
                :key="index"
            )
                button.btn.btn-primary.closer.centered-button(
                    @click="close_var_chart_options(index)"
                ) {{  is_closed(index) ? label('var_charts_options_component.open_var_chart_options') : label('var_charts_options_component.close_var_chart_options') }} : {{ getScaleItemLabel(index) }}

                // Si non replié, on affiche l'item
                template(v-if="!is_closed(index)")
                    Varchartscalesoptionsitemcomponent(
                        @on_change="handle_var_chart_scales_options_change(index, $event)"
                        :page_widget_id="page_widget_id"
                        :options="var_chart_scales_options"
                        :detailed="detailed"
                    )

                    button.btn.btn-danger.btn-lg.btn-block.remove_var_chart_scales_options_button(
                        @click="remove_var_chart_scales_options(index)"
                    ) {{ label('var_chart_scales_options_component.remove_var_chart_scales_options_button') }}
