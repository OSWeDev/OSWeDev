.OseliaRunGraphWidgetComponent
    // Le bouton + pour afficher/cacher le AddPanel
    .buttons
        button.add-button.btn-success(
            v-if="showPlusButton"
            @click="showAddPanel = !showAddPanel"
        ) +

        button.clear-button.btn-danger(
            v-if="showClearButton"
            @click="clearAll"
        ) {{ label('oselia_run_graph_widget_component.clear_button') }}

        button.autofit-button.btn-primary(
            v-if="showAutofitButton"
            @click="doAutofit"
        ) {{ label('oselia_run_graph_widget_component.autofit_button') }}

        button.show-selection-panel-button.btn-danger(
            v-if="showSelectionPanelButton"
            @click="activateShowSelectionPanel"
        ) {{ label('oselia_run_graph_widget_component.show_selection_panel_button') }}

    template(v-if='has_agent')
       
        // On insère le Canvas
        CanvasDiagram(
            :items="items"
            :selectedItem.sync="selectedItem"
            :updatedItem="updatedItem"
            :reDraw="reDraw"
            :isRunVo="isRunDiagram"
            :executeAutofit="executeAutofit"
            @select_item="selectItem"
            @canAutofit="canAutofit"
        )
    template(v-else)
        h1 {{ label('oselia_run_graph_widget_component.no_agent') }}
        p {{ label('oselia_run_graph_widget_component.no_agent_description') }}
        
    
        
    // Panel de sélection d'item
    transition(name="fade-slide")
        SelectionPanel(
            v-if="showSelectionPanel"
            :items="items"
            :selectedItem="selectedItem"
            :selectedItemRunInfo="selectedItemRunInfo"
            :removeItemFn="removeItem"
            :editItemFn="editSelectItem"
            @replayFunctionCall="replayFunctionCall"
        )

    // Panel d'ajout
    transition(name="fade-slide")
        AddPanel(
            v-if="showAddPanel"
            :items="choices_of_item"
            :addItemFn="addItem"
            :displayMode="display_mode"
            :changeDisplayModeFn="setDisplayMode"
            :type_of_item_displayed="type_of_item_displayed"
        )

