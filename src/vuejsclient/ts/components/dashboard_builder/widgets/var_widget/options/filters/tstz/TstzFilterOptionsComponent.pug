.tstz_filter_options
    .segment_type
        .label {{ label('tstz_filter_options.segment_type') }}
        .input
            multiselect.var_name_selector(
                :preselect-first="false"
                :multiple="false"
                v-model="tmp_segment_type"
                :options="segment_type_options"
                :allow-empty="false",

                :searchable="true"
                :internal-search="true"

                select-label=''
                select-group-label=''
                selected-label=''
                deselect-label=''
                deselect-group-label=''

                placeholder=''

                name="segment_type"
            )
    .localized
        .label {{ label('tstz_filter_options.localized') }}
        .input
            toggle-button(
                @change="switch_localized" 
                :value="localized" 
                :sync="false"
                :width="60"
                :labels="{checked: label('crud.field.boolean.true'), unchecked: label('crud.field.boolean.false')}")
