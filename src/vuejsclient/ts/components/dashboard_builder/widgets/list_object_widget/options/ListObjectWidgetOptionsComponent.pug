.list_object_widget_options_component
    template(v-if='widget_options')
        .options_separator_lvl1 {{ label('list_object_widget_options_component.separator.widget_options') }}
        .widget_title_label {{ label('list_object_widget_options_component.widget_title.title') }}
        .widget_title_wrapper
            .field_ref
                .input_wrapper
                    Singlevofieldrefholdercomponent(
                        :vo_field_ref="title_field_ref" @remove_field_ref="remove_title_field_ref" @add_field_ref="add_title_field_ref"
                        :page_widget_id='page_widget ? page_widget.id : null'
                    )
        .widget_subtitle_label {{ label('list_object_widget_options_component.widget_subtitle.subtitle') }}
        .widget_subtitle_wrapper
            .field_ref
                .input_wrapper
                    Singlevofieldrefholdercomponent(
                        :vo_field_ref="subtitle_field_ref" @remove_field_ref="remove_subtitle_field_ref" @add_field_ref="add_subtitle_field_ref"
                        :page_widget_id='page_widget ? page_widget.id : null'
                    )

        .widget_image_label {{ label('list_object_widget_options_component.widget_image.image') }}
        .widget_image_wrapper
            .field_ref
                .input_wrapper
                    Singlevofieldrefholdercomponent(
                        :vo_field_ref="image_field_ref" @remove_field_ref="remove_image_field_ref" @add_field_ref="add_image_field_ref"
                        :page_widget_id='page_widget ? page_widget.id : null'
                    )
        .widget_number_label {{ label('list_object_widget_options_component.widget_number.number') }}
        .widget_number_wrapper
            .field_ref
                .input_wrapper
                    Singlevofieldrefholdercomponent(
                        :vo_field_ref="number_field_ref" @remove_field_ref="remove_number_field_ref" @add_field_ref="add_number_field_ref"
                        :page_widget_id='page_widget ? page_widget.id : null'
                    )

        .sort_field_ref
            .input_label {{ label('list_object_widget_options_component.sort_field_ref') }}
            .widget_filter_wrapper
                .field_ref
                    .input_wrapper
                        Singlevofieldrefholdercomponent(
                            :vo_field_ref="_sort_field_ref" @remove_field_ref="remove_sort_field_ref" @add_field_ref="add_sort_field_ref"
                            :page_widget_id='page_widget ? page_widget.id : null'
                        )

        template(v-if="sort_field_ref")
            .sort_dimension_by
                .input_label {{ label('list_object_widget_options_component.sort_dimension_by') }}
                .input_wrapper
                    .switch_toggle
                        .input(id="Ascending" @click="change_sort_dimension('Ascending')" name="state-d" type="radio" :class="{'selected': (sort_dimension_by=='Ascending') }" )
                            label(for="Ascending") Ascending
                        .input(id="Descending" @click="change_sort_dimension('Descending')" name="state-d" type="radio" :class="{'selected': (sort_dimension_by=='Descending') }" )
                            label(for="Descending") Descending


        .number_of_elements
            .input_label {{ label('list_object_widget_options_component.number_of_elements') }}
            .number_of_elements
                .input_wrapper
                    input(
                        type="number"
                        v-model="number_of_elements"
                        v-tooltip="label('list_object_widget_options_component.number_of_elements.tooltip')"
                    )

        .display_orientation
            .input_label {{ label('list_object_widget_options_component.display_orientation') }}
            .input_wrapper
                .switch_toggle
                    .input(id="Horizontal" @click="change_display_orientation('Horizontal')" name="state-d" type="radio" :class="{'selected': (display_orientation=='Horizontal') }" )
                        label(for="Horizontal") Horizontal
                    .input(id="Vertical" @click="change_display_orientation('Vertical')" name="state-d" type="radio" :class="{'selected': (display_orientation=='Vertical') }" )
                        label(for="Vertical") Vertical

        .button_for_elements
            .input_label {{ label('list_object_widget_options_component.button_for_elements') }}
            .input_wrapper
                toggle-button(
                    @change="switch_button_for_elements" 
                    :value="button_elements" 
                    :sync="false"
                    :width="60"
                    :labels="{checked: label('crud.field.boolean.true'), unchecked: label('crud.field.boolean.false')}" 
                )

        template(v-if="button_elements")
            .url
                .field_ref
                    .input_label {{ label('list_object_widget_options_component.url') }}
                    .input_wrapper
                        Singlevofieldrefholdercomponent(
                            :vo_field_ref="url_field_ref" @remove_field_ref="remove_url_field_ref" @add_field_ref="add_url_field_ref"
                            :page_widget_id='page_widget ? page_widget.id : null'
                        )

            template(v-if="url")
                .use_blank
                    .input_label {{ label('list_object_widget_options_component.use_blank') }}
                    .input_wrapper
                        toggle-button(
                            @change="switch_use_blank" 
                            :value="blank" 
                            :sync="false"
                            :width="60"
                            :labels="{checked: label('crud.field.boolean.true'), unchecked: label('crud.field.boolean.false')}" 
                        )
