.cms_bloc_text_widget_options_component
    .cms_bloc_text_widget_options_component_wrapper
        .use_for_template
            .input_label {{ label('cms_bloc_text.widget_option.use_for_template') }}
            .input_wrapper
                toggle-button(
                    @change="switch_use_for_template" 
                    :value="use_for_template" 
                    :sync="false"
                    :width="60"
                    :labels="{checked: label('crud.field.boolean.true'), unchecked: label('crud.field.boolean.false')}" 
                )

        .titre
            .input_label {{ label('cms_bloc_text.widget_option.titre') }}
            .input_wrapper
                template(v-if="use_for_template")
                    .titre_field_ref_for_template
                        .input_label {{ label('cms_image.widget_option.titre_field_ref_for_template') }}
                        .input_wrapper
                            multiselect(
                                :preselect-first="false"
                                :multiple="false"
                                v-model="titre_field_ref_for_template"
                                :options="titre_field_ref_for_template_options"
                                :allow-empty="true"
                                :custom-label="fieldRefOptionLabel"

                                :searchable="true"
                                :internal-search="true"
                                :limit="50"
                                :loading="multiselect_loading"

                                @search-change="titre_field_ref_multiselect_search_change"

                                track-by="id"

                                :select-label='label("multiselect.selectLabel")'
                                :select-group-label='label("multiselect.selectGroupLabel")'
                                :selected-label='label("multiselect.selectedLabel")'
                                :deselect-label='label("multiselect.deselectLabel")'
                                :deselect-group-label='label("multiselect.deselectGroupLabel")'
                            )
                template(v-else)
                    Vuequilleditor(v-model='titre', :options="optionsEditeur")

        .sous_titre
            .input_label {{ label('cms_bloc_text.widget_option.sous_titre') }}
