.supervision_type_widget_component
    .supervision_api_type_ids
        .input_label {{ label('supervision_type_widget_component.supervision_api_type_ids') }}

        .supervision_api_type_ids_select
            .input_wrapper
                multiselect(
                    :preselect-first="false"
                    :multiple="true"
                    v-model="supervision_api_type_ids"
                    :placeholder="label('supervision_type_widget_component.supervision_api_type_ids_select')"
                    :options="supervision_select_options"
                    :custom-label="supervision_select_label"
                    :allow-empty="true",
                    autocomplete="off"

                    :searchable="true"
                    :internal-search="true"

                    id="supervision_api_type_ids_select"

                    :select-label='label("multiselect.selectLabel")'
                    :select-group-label='label("multiselect.selectGroupLabel")'
                    :selected-label='label("multiselect.selectedLabel")'
                    :deselect-label='label("multiselect.deselectLabel")'
                    :deselect-group-label='label("multiselect.deselectGroupLabel")'
                )
        .field_order_by_categories
            .input_label {{ label('supervision_type_widget_component.order_by_categories') }}
            .input_wrapper
                toggle-button(
                    @change="switch_order_by_categories"
                    :value="order_by_categories"
                    :sync="false"
                    :width="60"
                    :labels="{checked: label('crud.field.boolean.true'), unchecked: label('crud.field.boolean.false')}"
                )
        .field_show_counter
            .input_label {{ label('supervision_type_widget_component.show_counter') }}
            .input_wrapper
                toggle-button(
                    @change="switch_show_counter"
                    :value="show_counter"
                    :sync="false"
                    :width="60"
                    :labels="{checked: label('crud.field.boolean.true'), unchecked: label('crud.field.boolean.false')}"
                )