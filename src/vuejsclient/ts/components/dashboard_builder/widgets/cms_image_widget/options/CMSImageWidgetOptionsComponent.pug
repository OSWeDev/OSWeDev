.cms_image_widget_options_component
    .cms_image_widget_options_component_wrapper
        .field_use_for_template
            .input_label {{ label('cms_image.widget_option.use_for_template') }}
            .input_wrapper
                toggle-button(
                    @change="switch_use_for_template" 
                    :value="use_for_template" 
                    :sync="false"
                    :width="60"
                    :labels="{checked: label('crud.field.boolean.true'), unchecked: label('crud.field.boolean.false')}" 
                )

        template(v-if="use_for_template")
            .field_ref_for_template
                .input_label {{ label('cms_image.widget_option.field_ref_for_template') }}
                .input_wrapper
                    multiselect(
                        :preselect-first="false"
                        :multiple="false"
                        v-model="field_ref_for_template"
                        :options="field_ref_for_template_options"
                        :allow-empty="true"
                        :custom-label="fieldRefOptionLabel"

                        :searchable="true"
                        :internal-search="true"
                        :limit="50"
                        :loading="multiselect_loading"

                        @search-change="multiselect_search_change"

                        track-by="id"

                        :select-label='label("multiselect.selectLabel")'
                        :select-group-label='label("multiselect.selectGroupLabel")'
                        :selected-label='label("multiselect.selectedLabel")'
                        :deselect-label='label("multiselect.deselectLabel")'
                        :deselect-group-label='label("multiselect.deselectGroupLabel")'
                    )

        template(v-else)
            .image_bloc
                .input_label {{ label('cms_image.widget_option.file_id') }}
                .input_wrapper
                    vue-dropzone(ref="filedropzone" id="filedropzone" :options="dropzoneOptions")

            .radius_bloc 
                .input_label {{ label('cms_image.widget_option.radius') }}
                .input_wrapper
                    input(
                        type="number"
                        v-model="radius"
                    )