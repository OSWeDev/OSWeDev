.multiple_vo_field_ref_holder
    template(v-if="vo_field_ref_multiple && (vo_field_ref_multiple.length > 0)")
        .vo_ref_field_container
            template(v-for="field_ref in vo_field_ref_multiple")
                Vofieldwidgetrefcomponent(
                    :vo_field_ref="field_ref"
                    :page_widget_id='page_widget_id'
                    @remove_field_ref="remove_field_ref"
                )

    .vo_ref_field_receiver(@dragover="allowDrop" @drop="drop")
        .vo_ref_field_receiver_placeholder {{ label('multiple_vo_field_ref_holder.vo_ref_field_receiver_placeholder') }}
            