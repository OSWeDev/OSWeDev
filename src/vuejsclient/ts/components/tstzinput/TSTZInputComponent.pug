.tstz_input(:class="{'display_inline_block': inline_input_mode_and_disabled}")
    div(:class="{'row': !inline_input_mode_and_disabled}")
        div(:class="inline_input_mode_and_disabled ? '' : (segmentation_time ? 'col-md-6' : 'col-md-12')")
            Datepicker(v-model="date_value" :clear-button="!required && !disabled" :monday-first='true' :language="languages[language]" :placeholder="label('tstz_input.placeholder.date_debut')"  :required="required" :disabled="disabled" :format="format_datepicker" :minimum-view="datepicker_view" maximum-view="year" :class="{'form-control': !inline_input_mode_and_disabled}" @input="emitInput")

        template(v-if="segmentation_time")
            .col-md-6
                input(:class="{'form-control': !inline_input_mode_and_disabled}" type="time" v-model="time_value" :required="required" :disabled="disabled" :id="field.datatable_field_uid + '_time'" @input="emitInput")