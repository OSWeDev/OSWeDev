.tstz_input
    .row
        div(:class="segmentation_time ? 'col-md-6' : 'col-md-12'")
            Datepicker(v-model="date_value" :language="languages[language]" :placeholder="label('tstz_input.placeholder.date_debut')"  :required="required" :disabled="disabled" :format="format_datepicker" :minimumView="datepicker_view" maximumView="year" class="form-control" @input="emitInput")
        
        template(v-if="segmentation_time")
            .col-md-6
                input.form-control(type="time" v-model="time_value" :required="required" :disabled="disabled" :id="field.datatable_field_uid + '_time'" @input="emitInput")