.var_desc_explain_dep
    .row
        .col-md-12
            .dep_name(@click='opened=!opened') {{ dep_name }}
            .dep_code(@click='copy_dep_code') {{ dep_code }}
    .row
        .col-md-12.var_controller_label_wrapper
            .var_controller_label {{ label('var_desc.var_controller_label') }}
                Vardesccontrollercomponent(:var_id='var_id')
            
    .row(v-show='opened')
        .col-md-12
            template(v-for='(param, i) in params')
                template(v-if='(i >= 10) && limit_10')
                template(v-else)
                    Vardescexplaindepparamcomponent(:param='param')
            template(v-if='params && (params.length > 10) && limit_10')
                .var_controller_label(@click='limit_10 = false') {{ label('var_desc_explain_dep.limit_10') }}
                
