
mixin var_data_content()

    .var-data-wrapper
        template(v-if='!!var_param')
            .var_data_ref(@click='selectVar' :class='{"selected_var":is_selected_var, "selectable_var":isDescMode, "selected_var_dependency": is_selected_var_dependency, "selected_var_dependent": is_selected_var_dependent, "dependencies_heatmap_lvl_0":is_dependencies_heatmap_lvl_0, "dependencies_heatmap_lvl_1":is_dependencies_heatmap_lvl_1, "dependencies_heatmap_lvl_2":is_dependencies_heatmap_lvl_2, "dependencies_heatmap_lvl_3":is_dependencies_heatmap_lvl_3, "dependencies_heatmap_lvl_4":is_dependencies_heatmap_lvl_4, "dependencies_heatmap_lvl_5":is_dependencies_heatmap_lvl_5}')
                slot(v-bind:var_data="var_data")
                    template(v-if='(!!var_data) && ((var_data_value != 0) || (!consider_zero_value_as_null))')
                        template(v-if='!!prefix')
                            span(class='var-data-prefix') {{ prefix }}

                        template(v-if='(var_data_value === 0) && zero_value_replacement')
                            template {{ zero_value_replacement }}
                        template(v-if='(var_data_value !== 0) || ((var_data_value === 0) && (!zero_value_replacement))')
                            template(v-if="filter") {{ filtered_value }}
                            template(v-if="(!filter)") {{ var_data_value }}

                        template(v-if='!!suffix')
                            span(class='var-data-suffix') {{ suffix }}
                    template(v-else)
                        template(v-if='is_being_updated')
                            i.fa.fa-refresh.fa-spin.fa-fw(aria-hidden="true")
                        template(v-else) {{ null_value_replacement }}

.var-data--intersector-wrapper
    template(v-if='use_intersector')
        Intersect(@enter="intersect_in" @leave="intersect_out")
            +var_data_content()
    template(v-else)
        +var_data_content()
    