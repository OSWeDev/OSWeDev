.container_suivi_competences_indicateurs
    template(v-for="(suivi_competences_indicateur, index) in field_values")
        fieldset.suivi_competences_indicateur_item.mb-2(:suivi_competences_indicateur="index")
            legend {{ label('crud.container_suivi_competences_indicateurs.numero') }} {{ index + 1 }}
            template(v-for="field in fields")
                Crudcomponentfield(
                    :field="field",
                    :vo="suivi_competences_indicateur",
                    :show_insert_or_update_target="false",
                    @onchangevo="on_edit",
                    :auto_update_field_value='true',
                )

            .text-right
                .btn.btn-sm.btn-danger(@click="remove(index)") {{ label('crud.field.custom_field.remove_item') }}

    .add_new_indicateur.text-center
        .mt-1.btn.btn-success(@click="add") {{ label('crud.field.custom_field.add_new_indicateur') }}