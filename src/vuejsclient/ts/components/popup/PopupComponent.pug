.popup
    #popup_modal.modal.fade.in(ref="popup_modal", tabindex='-1', role='dialog')
        .modal-dialog.modal-lg(role='document')
            .modal-content
                template(v-if="popup")
                    template(v-if="popup.title")
                        .modal-header
                            h4(v-html="popup.title")
                            
                    .modal-body
                        div(v-html="popup.message")
                    
                    .modal-footer.text-center-important
                        button.btn.btn-primary(@click='close') 
                            template(v-if="popup.btn_txt")
                                span {{ popup.btn_txt }}
                            template(v-else)
                                span {{ label('popup.close') }}
