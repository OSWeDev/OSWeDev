include ../../../../views/mixins/loading.pug

.client
    +loading()
        h2 
            span {{ label('client.client.infos') }}
            i.fa.fa-edit(v-on:click="switchIsEditable")
        form(v-if="client", onsubmit="return false;")
            div
                label(for="nom") {{ label('client.user.mon-compte.nom') }}
                input(id="nom", type="text", :disabled="!isEditable", v-model="client.nom")
            div
                label(for="prenom") {{ label('client.user.mon-compte.prenom') }}
                input(id="prenom", type="text", :disabled="!isEditable", v-model="client.prenom")
            div
                label(for="telephone") {{ label('client.user.mon-compte.telephone') }}
                input(id="telephone", type="text", :disabled="!isEditable", v-model="client.telephone")
            div
                label(for="adresse") {{ label('client.user.mon-compte.adresse') }}
                input(id="adresse", type="text", :disabled="!isEditable", v-model="client.adresse")
            div
                label(for="code_postal") {{ label('client.user.mon-compte.code_postal') }}
                input(id="code_postal", type="text", :disabled="!isEditable", v-model="client.code_postal")
            div
                label(for="ville") {{ label('client.user.mon-compte.ville') }}
                input(id="ville", type="text", :disabled="!isEditable", v-model="client.ville")
            div
                label(for="societe") {{ label('client.user.mon-compte.societe') }}
                input(id="societe", type="text", :disabled="!isEditable", v-model="client.societe")
            div
                label(for="siret") {{ label('client.user.mon-compte.siret') }}
                input(id="siret", type="text", :disabled="!isEditable", v-model="client.siret")
            div
                label(for="infos_email") {{ label('client.user.mon-compte.email') }}
                input(id="infos_email", type="text", :disabled="!isEditable", v-model="client.email")
            div(v-if="isEditable")
                input(type="submit", class='btn btn-primary', v-on:click="save", :value="label('client.user.mon-compte.sauvegarder')")