.lang_selector
    template(v-if='!hide')
        template(v-if='show_lang_label')
            label.lang_selector_label(for="lang_selector_list") {{ label('lang_selector.label') }}
        multiselect.lang_selector_list(
            :preselect-first="false"
            :multiple="false"
            v-model="tmp_lang"
            :options="langs"
            :allow-empty="false",

            :custom-label="langLabel"
            :searchable="true"
            :internal-search="true"

            select-label=''
            select-group-label=''
            selected-label=''
            deselect-label=''
            deselect-group-label=''

            placeholder=''

            track-by="id"

            name="lang_selector_list"

            :class='{"pull-right":show_lang_label}'
        )

            .lang_selector_option(slot="option", slot-scope="props")
                gb-flag.lang_selector_flag.pull-right(v-if="props.option.code_flag" :code="props.option.code_flag" size="mini")
                .lang_selector_option_label {{ ((label('lang_selector.lang_prefix') && (label('lang_selector.lang_prefix') !='null')) ? label('lang_selector.lang_prefix'): '') + (props.option.code_flag ? props.option.code_flag : props.option.code_lang) + ((label('lang_selector.lang_suffix') && (label('lang_selector.lang_suffix') != 'null')) ? label('lang_selector.lang_suffix') : '') }}

            .lang_selector_option(slot="singleLabel", slot-scope="props")
                gb-flag.lang_selector_flag.pull-right(v-if="props.option.code_flag" :code="props.option.code_flag" size="mini")
                .lang_selector_option_label {{ ((label('lang_selector.lang_prefix') && (label('lang_selector.lang_prefix') !='null')) ? label('lang_selector.lang_prefix'): '') + (props.option.code_flag ? props.option.code_flag : props.option.code_lang) + ((label('lang_selector.lang_suffix') && (label('lang_selector.lang_suffix') != 'null')) ? label('lang_selector.lang_suffix') : '') }}

