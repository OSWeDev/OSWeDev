.rootElt.Reporting
    .row
        include ./card/cards.pug
        include ./filter/filters.pug
        
    .row(v-if="selected_card")
        .col-md-12
            template
                v-client-table.reporting_table(
                    :data="filtered_rows()",
                    :columns="selected_card_columns",
                    :options="vue_tables_options"
                )

                    template(v-if="selected_card.columnsHeaderSupp", v-for='groupColumn in selected_card.columnsHeaderSupp')
                        tr(:class="'header_group ' + groupColumn.name", slot="prependBody")
                            template(v-for='column in groupColumn.columns')
                                td(:colspan='column.colspan', :class='column.classe') {{ t(column.label) }}
                    
                    tr.main_total_line(slot="prependBody")
                        template(v-for='column in selected_card.columnsTotal')
                            column_widget(:columnData="column")

                    tr.segment_total_line(v-for="groupColumns in selected_card_rowsColumnsDatas", slot="prependBody")
                        template(v-for='column in groupColumns')
                            column_widget(:columnData="column")
                            
                    tr.header_group2(v-if="selected_card.columnsFooter && selected_card.columnsFooter.length > 0", slot="prependBody")
                        template(v-for='column in selected_card.columnsFooter')
                            td(:colspan='column.colspan') {{ t(column.label) }}
                        
        .col-md-12(v-if="selected_card.message_footer")
            span {{ t(selected_card.message_footer) }}