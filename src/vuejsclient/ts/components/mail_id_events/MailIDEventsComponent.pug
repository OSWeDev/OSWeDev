.mail_id_events
    template(v-if='is_loading')
        .bubble_wrapper.loading
            i.fa-duotone.fa-refresh.fa-spin(aria-hidden="true")
    template(v-else)
        .bubble_wrapper.loaded(v-tooltip.right='tooltip' :class='{[last_event_class]:true}' @click='throttled_update_datas')
            i.fa.fa-duotone.fa-fw(:class='{[fa_icon]:true}' aria-hidden="true")
