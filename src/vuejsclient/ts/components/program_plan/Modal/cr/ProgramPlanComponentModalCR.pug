#rdv_modal_cr

    .row(v-if='!!selected_rdv_cr')
        .col-sm-12.crsandnew
            .crs(v-if="!edited_cr")
                .cr
                    .row
                        .col-sm-12
                            i.fa-solid.fa-trash(aria-hidden="true", @click="delete_cr(selected_rdv_cr)" v-if='can_edit')
                            i.fa-solid.fa-pencil(aria-hidden="true", @click="editCR(selected_rdv_cr)" v-if='can_edit' :class="[in_edit_inline ? 'fa-xmark closing' : 'fa-pencil']")
                            button.btn.btn-sm.btn-secondary.ml-2(type="button", @click="togglePrevious")
                                i.fa-solid.fa-undo
                            button.btn.btn-sm.btn-secondary.ml-1(type="button", @click="toggleNext")
                                i.fa-solid.fa-redo

                            .oselia_chat_btn_closed(v-if="!oselia_blocked && POLICY_CAN_USE_REALTIME" :class="{ 'opened': oselia_opened }" @click='switchOpenOselia()')
                    .row
                        .col-sm-12
                            .custom_cr_read_component(:is="custom_cr_read_component" :revertToPreviousVersionBool="revertToPreviousVersionBool" :revertToNextVersionBool="revertToNextVersionBool" :edit_inline="in_edit_inline" :rdv='selected_rdv'  :oselia_opened='oselia_opened' :cr='selected_rdv_cr' :set_cr_html_content="set_cr_html_content" @update_cr="update_cr" @use_edit_inline="use_edit_inline")
                    
    .row(v-if="selected_rdv && selected_rdv.id && canaddcr")
        .col-sm-12.newcr
            .custom_cr_create_component(:is="custom_cr_create_component" :rdv='selected_rdv' :create_cr="create_cr")
                                  
    .row(v-if="selected_rdv && selected_rdv.id && edited_cr && can_edit")
        .col-sm-12.updatecr
            .custom_cr_update_component(:is="custom_cr_update_component" :rdv='selected_rdv' :cr='edited_cr' :update_cr='update_cr' :cancel_edition='cancel_edition')