.rootElt
    div(id="external-events", :class="isOpen?'opened':''")
      div.icons
        i(class="fa fa-chevron-right" aria-hidden="true", v-show="!isOpen", @click="isOpen = true")
        i(class="fa fa-chevron-left" aria-hidden="true", v-show="isOpen", @click="isOpen = false")
      div.filter(v-show="isOpen")
        i(class="fa fa-filter" aria-hidden="true" onclick="$('#filtre_boutiques').focus()")
        input(id="filtre_boutiques" v-model="filtre_boutiques" placeholder="Filtrer")        
      div(v-for="(ba, i) in filtered_ordered_boutiques", v-show="isOpen")
        draggable-planning-store-visits-ba(:ba="ba", :bam="getBamForBa(ba)", :bacpt="getBaCptForBa(ba)", :enseigne="getEnseigneForBa(ba)", :key="ba.id")