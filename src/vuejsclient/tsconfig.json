{
    "compilerOptions": {
        "target": "es2020",
        "module": "CommonJS",
        "lib": [
            "es2020",
            "es6",
            "dom",
            "ESNext"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "jquery",
            "jqueryui",
            "jquery.contextmenu",
            "w3c-image-capture"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    }
}